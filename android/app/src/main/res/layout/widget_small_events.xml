<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_calendar"
            android:tint="#333333" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sự kiện"
            android:textSize="14sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginStart="6dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/widget_event_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngày 1 hàng tháng"
        android:textSize="12sp"
        android:textColor="#333333"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/widget_event_1_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ngày 25 thg 6, 2025"
        android:textSize="10sp"
        android:textColor="#666666"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/widget_event_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngày rằm hàng tháng"
        android:textSize="12sp"
        android:textColor="#333333"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/widget_event_2_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ngày 9 thg 7, 2025"
        android:textSize="10sp"
        android:textColor="#666666" />

</LinearLayout> 