<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_calendar"
            android:tint="#333333" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sự kiện sắp tới"
            android:textSize="14sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginStart="6dp" />
    </LinearLayout>

    <!-- Event 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_upcoming_event_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ngày 1 hàng tháng"
                android:textSize="12sp"
                android:textColor="#333333"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/widget_upcoming_event_1_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ngày 25 thg 6, 2025"
                android:textSize="10sp"
                android:textColor="#666666" />
        </LinearLayout>

        <TextView
            android:id="@+id/widget_upcoming_event_1_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 ngày"
            android:textSize="10sp"
            android:textColor="#F44336"
            android:textStyle="bold"
            android:gravity="end" />
    </LinearLayout>

    <!-- Event 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_upcoming_event_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ngày rằm hàng tháng"
                android:textSize="12sp"
                android:textColor="#333333"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/widget_upcoming_event_2_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ngày 9 thg 7, 2025"
                android:textSize="10sp"
                android:textColor="#666666" />
        </LinearLayout>

        <TextView
            android:id="@+id/widget_upcoming_event_2_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18 ngày"
            android:textSize="10sp"
            android:textColor="#F44336"
            android:textStyle="bold"
            android:gravity="end" />
    </LinearLayout>

</LinearLayout> 